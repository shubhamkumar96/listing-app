<h2> <%= area.name %> </h2>

<a href="/areas/<%= area.id %>/edit"> Edit </a>
<%- include('../partials/deleteForm', { url: `/areas/${area.id}` }) %>

<% if (workersByArea.length > 0) { %> 
    <h2> Workers in this Area </h2>
    <div>
        <% workersByArea.forEach(worker => { %>
            <a href="/workers/<%= worker.id %>">
                <div>
                    <img height="150" width="100" src="<%= worker.profileImagePath %>">
                    <br>
                    Name: <%= worker.name %>
                </div>
            </a>
        <% }) %> 
    </div>
<% } %> 